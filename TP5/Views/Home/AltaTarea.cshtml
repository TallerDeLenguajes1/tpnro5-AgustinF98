@model TP5.Entidades.Tareas

    <form asp-action="CrearTarea" method="post">
        <div class="form-group">
            <label asp-for="Descripcion">Descripcion: </label>
            <input class="form-control" type="text" asp-for="Descripcion" />
            <span asp-validation-for="Descripcion"></span>
        </div>

        <div class="form-group">
            <label asp-for="Duracion">Duracion: </label>
            <input class="form-control" type="text" asp-for="Duracion" />
            <span asp-validation-for="Duracion"></span>
        </div>

        <input type="submit" name="Enviar" value="Enviar" class="btn btn-primary" />
    </form>