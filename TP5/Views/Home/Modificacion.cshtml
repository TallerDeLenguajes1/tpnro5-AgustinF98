@model TP5.Entidades.Tareas

<form asp-action="ModificacionTarea" method="post">
    <input type="hidden" asp-for="Id" value="@Model.Id" />

    <div class="form-group">
        <label asp-for="Descripcion">Descripcion: </label>
        <input class="form-control" type="text" asp-for="Descripcion" value="@Model.Descripcion" />
        <span asp-validation-for="Descripcion"></span>
    </div>

    <div class="form-group">
        <label asp-for="Duracion">Duracion: </label>
        <input class="form-control" type="text" asp-for="Duracion" value="@Model.Duracion" />
        <span asp-validation-for="Duracion"></span>
    </div>

    <div class="form-group">
        <label asp-for="Estado">Estado: </label>
        <input class="form-control" type="radio" asp-for="Estado" value="Realizada" /> Realizada
        <input class="form-control" type="radio" asp-for="Estado" value="Pendiente" /> Pendiente
        <span asp-validation-for="Duracion"></span>
    </div>

    <input type="submit" name="Modificar" value="Modificar" class="btn btn-primary" />
</form>